@model FoodCategory


<div class="text-center border-bottom p-3 card-header bg-light">
    <h2 class="display-5">@Model.Title</h2>
</div>
<div class="row mx-0">
    @for (int i = 0; i <= Model.FoodItems.Count - 1; i++)
    {
        <div class="col-md-6 col-lg-4 px-4 my-4">
            <div class="card">
                <h3 class="card-header text-center">
                    @Model.FoodItems[i].Title
                </h3>
                <div class="card-body">
                    <db-image image="@Model.FoodItems[i].Picture" />
                    <p class="card-text">
                        @Model.FoodItems[i].Description
                    </p>
                </div>
                <form asp-controller="Order" asp-area="Order"
                      asp-action="AddToOrder">
                    <div class="form-group m-3 p-2">
                        <input type="hidden" name="menuItemId"
                               value="@Model.FoodItems[i].MenuItemId" />
                        <input type="submit" value="Add to Order"
                               class="btn btn-outline-primary" />
                        <span class="ml-3">Price: @Model.FoodItems[i].PriceBeforeTax</span>
                    </div>

                </form>
            </div>
        </div>
    }
</div>
